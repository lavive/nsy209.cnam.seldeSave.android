<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:orientation="vertical"
        android:weightSum="80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/forname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/forname" />

            <ImageButton
                android:id="@+id/editForname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/name" />

            <ImageButton
                android:id="@+id/editName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/address" />

            <ImageButton
                android:id="@+id/editAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/postalCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/postal_code" />

            <ImageButton
                android:id="@+id/editPostalCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/town"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/town" />

            <ImageButton
                android:id="@+id/editTown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/email" />

            <ImageButton
                android:id="@+id/editEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/cellNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/cell_number" />

            <ImageButton
                android:id="@+id/editCellNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="@string/phone_number" />

            <ImageButton
                android:id="@+id/editPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical"></LinearLayout>

        <ImageButton
            android:id="@+id/mySupplyDemand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/my_echange" />

        <ImageButton
            android:id="@+id/wealthSheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wealthsheet" />

    </LinearLayout>
</LinearLayout>